{
  "description": "A cute and good stream layout for yen!",
  "keywords": [
    "nodecg-bundle"
  ],
  "repository": "https://github.com/witch-zone/nodecg-yendraws.git",
  "homepage": "http://twitch.tv/yendraws",
  "name": "nodecg-yendraws",
  "version": "1.0.0",
  "author": {
    "name": "dani quinn sexton",
    "email": "dani@glitter.tech",
    "url": "http://glitter.tech"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension"
  ],
  "nodecg": {
    "compatibleRange": ">=1.6.1",
    "bundleDependencies": {
      "nodecg-twitchie": "^3.0.0"
    },
    "dashboardPanels": [
      {
        "name": "timer",
        "title": "Timer",
        "width": 2,
        "file": "timer.html",
        "headerColor": "#6441A4"
      },
      {
        "name": "Commands",
        "title": "Chat Commands",
        "width": 2,
        "file": "commands.html",
        "headerColor": "#6441A4"
      },
      {
        "name": "Manage Commands",
        "title": "Manage Commands",
        "width": 2,
        "file": "manage-commands.html",
        "workspace": "Config"
      },
      {
        "name": "Manage Schedule",
        "title": "Manage Schedule",
        "width": 2,
        "file": "manage-schedule.html",
        "workspace": "Config"
      }
    ],
    "graphics": [
      {
        "file": "yendraws.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "postyen.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      },
      {
        "file": "brb.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ],
    "soundCues": [
      {
        "name": "notification",
        "defaultVolume": 50,
        "defaultFile": "sounds/magic-notification.ogg",
        "channels": 1
      }
    ]
  },
  "scripts": {
    "build": "npm run build:dashboard && npm run build:graphics && npm run build:extension",
    "build:dashboard": "webpack --config webpack.config.dashboard.js",
    "build:graphics": "webpack --config webpack.config.graphics.js",
    "build:extension": "NODE_ENV=production tsc --p tsconfig.extension.json",
    "lint": "eslint \"src/**/*.{ts,tsx,js,tsx}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/classnames": "^2.3.1",
    "@types/color": "^3.0.1",
    "@types/react-motion": "^0.0.33",
    "@types/react-redux": "^7.1.25",
    "@types/twemoji": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.3",
    "esbuild-loader": "^2.20.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-scss": "^4.3.0",
    "svg-sprite-loader": "^6.0.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@polymer/iron-icon": "^3.0.0",
    "@polymer/iron-icons": "^3.0.0",
    "@polymer/iron-list": "^3.0.0",
    "@polymer/iron-pages": "^3.0.0",
    "@polymer/paper-button": "^3.0.0",
    "@polymer/paper-checkbox": "^3.0.0",
    "@polymer/paper-icon-button": "^3.0.0",
    "@polymer/paper-input": "^3.0.0",
    "@polymer/polymer": "^3.5.1",
    "batcher-js": "^1.0.3",
    "classnames": "^2.3.2",
    "color": "^4.2.3",
    "moment": "^2.29.4",
    "node-cache": "^5.1.2",
    "nodecg-twitchie": "^3.8.1",
    "nodecg-twitchie-graphics": "^4.2.1",
    "preact": "^10.11.3",
    "react-motion": "^0.5.2",
    "twemoji": "^14.0.2",
    "zustand": "^3.7.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{ts,tsx,scss,json,md,html}": [
      "prettier --write"
    ]
  }
}
